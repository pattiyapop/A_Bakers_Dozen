<p id="notice"><%= notice %></p>

<h1><%= @recipe.name %></h1>
<%= image_tag(@recipe.picture, :size => "250x250", :hspace => '15px', :vspace => '15px', :align => "left") %>

<p>
   Submitted by <%= link_to @recipe.user.name, @recipe.user %>
</p>

<p>
   <b>Description:</b><br>
   <%= @recipe.description %>
</p>

<p>
   <b>Ingredients:</b><br>
   <% @ingredients.each do |ingredient| %>
     <%= ingredient %><br>
   <% end %>
</p>

<p>
  <b>Instructions:</b><p>
   <% @instructions.each do |step| %>
     <%= step %><p>
   <% end %>
</p>

<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Delete', @recipe, confirm: 'Are you sure?',method: :delete %> |
<%= link_to 'Back', recipes_path %>
