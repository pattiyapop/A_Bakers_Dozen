!!! 5
%html
  %head
    %title A Baker's Dozen
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    %h1.title A Baker's Dozen
    %h1.subtitle
      A social recipe-sharing site
      %right
      - if signed_in?
        = link_to 'Profile', current_user, :align => "right"
        |
        = link_to 'Log-out', signout_path, :method => "delete", :align => "right"
      - else
        = link_to 'Log-in', signin_path, :align => "right"
    %nav 
      = link_to 'Home', recipes_path
      |
      = link_to 'My Recipes', recipes_path
      |
      = link_to 'My Friends', users_path
      |
      = link_to 'All Comments', comments_path
      %right
        = form_tag recipes_path, :action => 'search', :method => :get do
          = text_field_tag :search_query, params[:search_query], :placeholder => "Search Recipes"
          = submit_tag 'Go!', :id => 'search_submit'

    #main
      - if flash[:notice]
        #notice.message= flash[:notice]
      - elsif flash[:warning]
        #warning.message= flash[:warning]

      = yield
